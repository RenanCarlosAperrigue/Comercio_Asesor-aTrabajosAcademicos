

@model List <OptimalWork.Models.Producto>


<div class="main">
    <div class="shop_top">
        <h3><span class="light">Resultados:</span> &quot;@ViewBag.clave&quot;</h3>
        <div class="container">
            <!--  ==========  -->
            <!--  = Products =  -->
            <!--  ==========  -->
            <div class="row popup-products">
                <div id="isotopeContainer" class="isotope-container">

                    @foreach (var item in Model)
                    {
                        var imagen = @item.ProductoImagen.FirstOrDefault();
                        string img = imagen == null ? "no_disponible.jpg" : imagen.Imagen;

                            <!--  ==========  -->
                            <!--  = Single Product =  -->
                            <!--  ==========  -->
                        <div class="span3 filter--sunglasses" data-price="688" data-popularity="5" data-size="m|xl|xxl" data-color="pink" data-brand="nike">
                            <div class="product">

                                <div class="product-img">
                                    <div class="picture">
                                        <img width="540" height="374" alt="" src="~/ImgProductos/@img" />
                                        <div class="img-overlay">
                                            <a class="btn more btn-primary" href="#">Detalles</a>
                                            <a onclick="AgregarCarrito(@item.ProductoId,'@item.Denominacion','@img',@item.Precio)" class="btn buy btn-danger" href="#">Al Carrito</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="main-titles no-margin">
                                    <h4 class="title">S/ @item.Precio</h4>
                                    <h5 class="no-margin isotope--title">@item.Descripcion</h5>
                                </div>
                                <p class="center-align stars">
                                    <span class="icon-star stars-clr"></span>
                                    <span class="icon-star stars-clr"></span>
                                    <span class="icon-star stars-clr"></span>
                                    <span class="icon-star stars-clr"></span>
                                    <span class="icon-star stars-clr"></span>

                                </p>
                            </div>
                        </div> <!-- /single product -->

                    }
                </div>
            </div>

